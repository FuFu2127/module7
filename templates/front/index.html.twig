
    {% extends 'base.html.twig' %}

{% block title %}Bienvenue sur mon site{% endblock %}

{% block body %}
<h1>Bienvenue</h1>

<section class="row">
    {% for employe in employes %}
    <div class="col-10 mb-3">
        <table class="table">
        <thead>
            <tr>
            <th scope="col">Id</th>
            <th scope="col">Prenom</th>
            <th scope="col">Nom</th>
            <th scope="col">Telephone</th>
            <th scope="col">Email</th>
            <th scope="col">Adresse</th>
            <th scope="col">Poste</th>
            <th scope="col">Salaire</th>
            <th scope="col">Date de naissance</th>
            </tr>
        </thead>
        <tbody>
            <tr>
            <th scope="row"> {{ path("app_employe_show" , { id : employe.id }) }} </th>
            <td> {{ employe.prenom }} </td>
            <td> {{ employe.nom }} </td>
            <td> {{ employe.telephone }} </td>
            <td> {{ employe.email }} </td>
            <td> {{ employe.adresse }} </td>
            <td> {{ employe.poste }} </td>
            <td> {{ employe.salaire }} </td>
            <td> {{ employe.dt_naissance }} </td>
            </tr>

        </tbody>
        </table>
    <div/>

    {% endfor %}
<section/>

{% endblock %}

